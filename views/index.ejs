<!DOCTYPE HTML>
<html lang="en-US">
<head>
	<meta charset="UTF-8">
	<title>Vchat - 基于主题的多人对话</title>
	<link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
	<link rel="stylesheet" type="text/css" href="css/all.css">
	<style type="text/css">

		.top-color{padding:5px 20px;text-align:right;}
		.create,.join{border-right: 1px solid #ccc;}
		.into{min-height:230px;}
		
	</style>

	<script type="text/javascript">

		var USER = <%- JSON.stringify(user)%> || {};
		
	</script>
</head>
<body>
	<!-- top {user:{user}} -->
	<% include common/top.ejs %>
	
	<div class="container">
		<div class="head">
			<h1>Vchat</h1>
			<p class="subtitle" > --- 基于主题的多人对话</p>
		</div>
		<div class="row">
			<div class="span4">
				<div class="create">
					<h3>创建一个对话</h3>
					<form action="/sys/create" method="post" >
						<ul class="reset">
							<li>
								<label for="topic">主题</label>
								<input type="text" id="topic" name="topic" placeholder="讨论主题">
							</li>
							<li>
								<label for="des">描述</label>
								<textarea placeholder="描述" name="des" id="des" ></textarea> 
							</li>
							<li><input type="submit" class="btn" value="创建" /></li>
						</ul>
					</form>
				</div>
			</div>
			<div class="span4">
				<div class="into join">
					<h3>加入一个对话</h3>
					<form action="/sys/into" method="post" >
						<ul class="reset">
							<li>
								<label for="chatid">输入对话KEY</label>
								<input type="text" id="webchatid" name="roomid" placeholder="输入对话KEY" >

							</li>
							<li><input type="submit" class="btn"  value="进入" ></li>
						</ul>
					</form>
				</div>
			</div>
			<div class="span4">
				<div class="room-list">
					<%
						var keys = Object.keys( log );
						if( keys.length ){
					%>
					<h3>去过的地方</h3>
					<ul>
						<%for(var i=0; i<keys.length; i++){%>
							<li>
								<a href="/<%=log[ keys[i] ].name ? log[ keys[i] ].name : log[ keys[i] ].id%>"><%=log[ keys[i] ].topic%></a>
							</li>
						<%}%>
					</ul>
					<%}%>
					

					<h3>推荐的对话</h3>
					<ul>
						<li><a href="/webchat">WebChat开发讨论</a></li>
						<li><a href="/test">web开发测试</a></li>
					</ul>
					
				</div>
			</div>
		</div>
		
	</div>
	<div class="footer">
		<div class="container">
		<p><a href="/about">about</a></p>	
		</div>
	</div>

	<script type="text/javascript" src="/js/jquery-1.6.3.min.js"></script>
	<script type="text/javascript" src="/js/we.min.js"></script>

	<script type="text/javascript" src="/js/we.top.min.js"></script>

</body>
</html>