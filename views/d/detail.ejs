<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title><%=data.text.slice(0, 50)%></title>

	<link rel="stylesheet" type="text/css" href="/bootstrap/css/bootstrap.min.css"/>
	<link rel="stylesheet" type="text/css" href="/css/all.css"/>
	<link rel="stylesheet" type="text/css" href="/css/chat.css"/>

	<style type="text/css">
	.reset-width{width:920px;}
		.message{font-size:13px;padding:8px;background:#f2fbf2;}
		.message p{text-indent:2em;line-height:1.9em;margin:0px;}
		.title{color:#999;margin-bottom:8px;}
		.title .time{margin-left:20px;}
		.room{margin-bottom:30px;}
		.post-box-in{margin:0px 40px;}
		.review-box{padding:3px;border:1px solid #c6c6c6;width:30em;margin:10px 0px;}
		.orig{margin-bottom:15px;border-bottom:#ccc dotted 1px;padding-bottom:15px;}
			.orig .head{background:#F4FBDC;}
	</style>
	<script type="text/javascript">
		var ROOM = <%- JSON.stringify(room)%>;
	</script>
</head>
<body>	

	<!-- top {user:{user}} -->
	<% include ../common/top.ejs %>

	<div class="container">
		<div class="bd reset-width">

			<div class="room">
				<blockquote>
					<h1 class="topic">
						<span>
							<a href="http://vchat.co/<%=room.name ? room.name : room.id%>"><%=room.topic%></a>
						</span>
					</h1>
					<p class="des"><small class="des"><%=room.des%></small></p>
				</blockquote>
			</div>

			<div class="chat-container">
				

				<div class="chat orig">
					<div class="photo">
						<a href="/user/<%=data.uid%>" target="_blank" data-uid="<%=data.uid%>">
						    <img src="<%=data.uavatar%>" alt="<%=data.uname%>" class="avatar">
						</a>  
					</div>
					<div class="info">
						<div class="head">
							<a href="/user/<%=data.uid%>" target="_blank" class="name"><%=data.uname%></a>
							<a href="/d/<%=data._id%>" class="time"><%=tool.format(data.time*1000)%></a>
						</div>
						<div class="context">
							<%if(data.to){%>
							<div class="reply-quote">
								<%=data.to.text%>
								<a href="/user/<%=data.to.uid%>"><%=data.to.uname%></a>
							</div>
							<%}%>
							<div class="reply-mine"><%-tool.revertHtmlTag(data.text)%> <a id="chat-reply" class="chat-reply" href="javascript:;">回复</a></div>
						</div>
					</div>

					<!--回复功能 S-->
					<div class="post-box" id="review-box">
						<form method="post" id="postForm" class="post-form" action="/sys/post">
							<div class="post-box-in" id="postboxIn"> 
								<div class="post-text-box"> 
									<div class="post-text" z-index="0" id="postText" maxlength="5000" contenteditable="true"></div> 
									<textarea class="post-text hidden" id="postTextArea" maxlength="5000" name="text"></textarea> 
								</div> 
								<div class="btns"> 
									<div class="btn-group"> 
						                <button type="submit" class="btn btn-small">回复</button> 
						             </div> 
					            </div> 						 
							</div>
						</form>
					</div>
					<!--回复功能 E-->

				</div>

				<%
					for(var i=0; list && i<list.length; i++){
					var item = list[i];
				%>
					<div class="chat">
						<a name="<%= item._id %>"></a>
						<div class="photo">
							<a href="/user/<%=item.uid%>" target="_blank" data-uid="<%=item.uid%>">
							    <img src="<%=item.uavatar%>" alt="<%=item.uname%>" class="avatar">
							</a>  
						</div>
						<div class="info">
							<div class="head">
								<a href="/user/<%=item.uid%>" target="_blank" class="name"><%=item.uname%></a>
								<a href="/d/<%=item._id%>" class="time"><%=tool.format(item.time*1000)%></a>
							</div>
							<div class="context">
								<%if(item.to){%>
								<div class="reply-quote">
									<%-tool.revertHtmlTag(item.to.text)%>
									<a href="/user/<%=item.to.uid%>"><%=item.to.uname%></a>
								</div>
								<%}%>
								<div class="reply-mine"><%=item.text%></div>
							</div>
						</div>
					</div>
				<%}%>
			</div>	
		</div>
	</div>
	<% include ../common/footer.ejs %>

	<script type="text/javascript" src="/js/jquery-1.6.3.min.js"></script>
	<script type="text/javascript" src="/js/we.min.js"></script>
	<script type="text/javascript" src="/js/we.top.min.js"></script>
	<script type="text/javascript" src="/js/we.chat.min.js"></script>
	<script type="text/javascript">
		//修改信息为已读
		var hash = location.hash.slice(1);
		if( hash.length == 24 ){
			var model = new WE.api.NoticeModel();
			model.noticeStatus( hash );
		}

	</script>
</body>
</html>