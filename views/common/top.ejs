<script>

	var USER = <%-JSON.stringify(user) %>
</script>
<header>
	<div class="pull-left header-links links-dot hidden">
		<a class="home" href="/">vchat.co</a>
		<a class="dotted">...</a>
	</div>
	<div class="pull-left header-links links-show">
		<a class="home" href="/">vchat.co</a>
		<% var pageName = typeof page == "undefined" ? "none" : page; %>
		<div class="search-box" id="search-box">
			<form method="get" action="/search" id="search-form">
				<input autocomplete="off" disableautocomplete placeholder="Search topics" name="key" maxlength="40" class="search-input">
			</form>
			<div class="result-box hidden">
				<a class="loading hidden" style="text-algin:center">
					<img src="/public/images/loadinfo.net.gif">...
				</a>
				<div class="results">

				</div>
			</div>

		</div>
		<div class="menu-links">
			<a href="/recommend" <% if( pageName == "recommend"){ %> class="select" <% } %>>Recommend</a>
			<a href="/recently" <% if( pageName == "recently"){ %> class="select" <% } %>>Recently</a>
		</div>
	</div>
	<% if(user){ %>
	<div class="pull-right header-menu">
		<div class="notice-box" id="notice-box">
			<a href="/user/notice" class="bell">
				<i class="icon-noticedefault"></i>
			</a>
			<div class="notice-list hidden">
				<div class="content">
					<!-- <p class="no-notice">No recent new notice...</p> -->
					<p style="text-align:center" class="no-notice">
						<img src="/public/images/loadinfo.net.gif">
					</p>
				</div>
				<div class="link">
					<a href="/user/notice">See all notifications</a>
				</div>
			</div>
		</div>
		<div class="account-box">

			<a class="nick-name" href="/user/home">
				<img src="<%=user.avatar%>">
				<%=user.name =="" ? "(未设置昵称)": user.name %>
			</a>
			<div class="drop-list">
				<ul>
					<li>
						<a href="/user/home">
							Home Page
						</a>
					</li>
					<li>
						<a href="/user/edit-avatar">
							Edit Avatar
						</a>
					</li>

					<% if( !/^[\w._\-]+@[\w_\-]+\.\w+$/.test(user.mail) ){ %>
					<li>
						<a href="/user/bind-mail">
							
							Bind Email
						</a>
					</li>
					<% } %>

					<li>
						<a class="login-out" href="/out">				
							Login out
						</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
	<% }else{ %>
	<div class="pull-right header-unlogin">
		<a href="/reg">Create an account</a>
		<a href="/login">Sign in</a>
	</div>
	<% } %>
</header>