<header>
	<div class="pull-left header-links">
		<a href="/home">vchat.co</a>
	</div>
	<% if(user){ %>
	<div class="pull-right header-menu">
		<div class="notice-box">
			<a href="/user/notice">
				<i class="icon-noticedefault"></i>
			</a>
		</div>
		<div class="account-box">
			<a class="nick-name" href="/user/home">
				<img src="<%=user.avatar%>">
				<%=user.name =="" ? "(暂无昵称)": user.name %>
			</a>
			<div class="drop-list">
				<ul>
					<li>
						<a href="/user/home">
							Home Page
						</a>
					</li>
					<!-- <li>
						<a href="/user/<%=user._id%>">
							
							Personal page
						</a>
					</li> -->
					<li>
						<a href="/user/edit-avatar">
							Edit Avatar
						</a>
					</li>

					<% if( !/^[\w._\-]+@[\w_\-]+\.\w+$/.test(user.mail) ){ %>
					<li>
						<a href="/user/bind-mail">
							
							Bind Email
						</a>
					</li>
					<% } %>

					<li>
						<a class="login-out" href="/sys/out">				
							Login out
						</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
	<% }else{ %>
	<div class="pull-right header-unlogin">
		<a href="/sys/reg">Create an account</a>
		<a href="/sys/login">Sign in</a>
	</div>
	<% } %>
</header>