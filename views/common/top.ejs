<header>
	<div class="pull-left header-links">
		<a href="/">vchat.co</a>
	</div>
	<% if(user){ %>
	<div class="pull-right header-menu">
		<div class="notice-box">
			<a href="/user/notice">
				<i class="icon-noticedefault"></i>
			</a>
		</div>
		<div class="account-box">
			<a class="nick-name" href="/user/home">
				<img src="<%=user.avatar%>">
				<%=user.name =="" ? "(暂无昵称)": user.name %>
			</a>
		</div>
	</div>
	<% }else{ %>
	<div class="pull-right header-unlogin">
		<a href="/sys/reg">Create an account</a>
		<a href="/sys/login">Sign in</a>
	</div>
	<% } %>
</header>